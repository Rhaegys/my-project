{% extends 'base.html.twig' %}

{% block title %}Instrument{% endblock %}

{% block body %}
    <div class="container">
        <h1>Instrument</h1>
    </div>
    <div class="container">
        <table class="table">
        <tbody>
        
        <tr>
        <th>Symbol</th>
        <td>{{ instrument.symbol }}</td>
        </tr>
        <tr>
        <th>Quantity</th>
        <td>{{ instrument.quantity }}</td>
        </tr>
        </tbody>
        </table>       
        <a href="{{ path('instrument_edit', {'id': instrument.id}) }}" class="btn btn-outline-primary">Edit</a>
    </div> 
    <div class="container"> 
        <a href="{{ path('instrument_index') }}" class="btn btn-outline-primary">Back to list</a>
        {{ include('instrument/_delete_form.html.twig') }}
    </div>
{% endblock %}
